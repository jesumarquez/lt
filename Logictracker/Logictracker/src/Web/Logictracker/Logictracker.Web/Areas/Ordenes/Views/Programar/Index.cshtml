@{
    ViewBag.Title = "Ordenes para Programar";
}

@*<h1>@ViewBag.Title</h1>*@

<script id="tPuntoEntrega" type="text/x-kendo-template">
    <div>
        <span>#= data.Codigo #</span>
        <br />
        <span style="font-size:xx-small;"> #= data.Descripcion #</span>
    </div>
</script>

<div ng-app="logictracker" class="container" ng-controller="OrdenesController">
    <div class="row nl-filterpanel">
        <div class="col-md-2">
            <div class="row">
                <div class="col-md-12">
                    @Html.ResourceLabel("Entities", "PARENTI01"):
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <lt-ddl-distrito lt-ng-model="distritoSelected" lt-default-value="UserData.DistritoSelected" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    @Html.ResourceLabel("Entities", "PARENTI02"):
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <lt-ddl-base lt-ng-model="baseSelected" lt-default-value="UserData.BaseSelected" lt-dependent-on="distritoSelected" />
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="row">
                <div class="col-md-12">
                    @Html.ResourceLabel("Entities", "PARENTI07"):
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <lt-ms-transportista lt-ng-model="transportistaSelected"
                                         lt-data-distrito="distritoSelected"
                                         lt-depends-on-base="baseSelected" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <span class="InputGroup__label">@Html.ResourceLabel("Labels", "Entrega"):</span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <lt-ac-punto-entrega lt-ng-model="puntoEntregaSelected"
                                         lt-data-distrito="distritoSelected"
                                         lt-data-base="baseSelected"
                                         lt-template="tPuntoEntrega"
                                         lt-depends-on="baseSelected" />
                </div>

            </div>
        </div>
        <div class="col-md-2">
            <div class="row">
                <div class="col-md-12">
                    @Html.ResourceLabel("Labels", "Desde"):
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <input class="form-control" kendo-date-picker k-ng-model="desde" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    @Html.ResourceLabel("Labels", "Hasta"):
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <input class="form-control" kendo-date-picker k-ng-model="hasta" />
                </div>
            </div>
        </div>

        <div class="col-md-2">
            <div class="row">
                <div class="col-md-12">
                    @Html.ResourceLabel("Labels", "Producto"):
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <lt-ms-insumo lt-ng-model="insumoSelected"
                                  lt-data-distrito="distritoSelected"
                                  lt-data-base="baseSelected"
                                  lt-depends-on="baseSelected" />
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="row">
                <div class="col-md-12">
                    <button class="form-control" kendo-button ng-click="onBuscar()" style="margin-top: 1.5em; -moz-min-width: 10em; -ms-min-width: 10em; -o-min-width: 10em; -webkit-min-width: 10em; min-width: 10em" type="button">
                        @Html.ResourceLabel("Labels", "Buscar")
                    </button>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <button class="form-control" kendo-button
                            style="margin-top: 1.5em; -moz-min-width: 10em; -ms-min-width: 10em; -o-min-width: 10em; -webkit-min-width: 10em; min-width: 10em" type="button"
                            data-toggle="modal" data-target="#myModal" ng-disabled="productsSelected.length == 0">
                        @Html.ResourceLabel("Labels", "Asignar")
                    </button>
                </div>
            </div>
        </div>

    </div>

    <div cass="row" style="margin-top: 1em;">
        <div class="col-md-12">
			<button ng-show="productsSelected.length > 0" type="button" ng-click="clearProductsSelected()">Limpiar</button>
			<div><summary-products-selected lt-ng-selected-list="productsSelected" /></div>
            <div kendo-grid="ordenesGrid" k-options="ordenesGridOptions" k-data-source="Orders"></div>
        </div>
    </div>

    <span kendo-notification="notify"></span>


    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" ng-controller="OrdenesAsignarController">
        <div class="modal-content" style="width: 75%">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Enviar a Distribución</h4>
            </div>

            <div style="min-height: 10px" class="modal-body">
                <form>
                    <div class="row">
                        <div class="form-group">
                            <label for="startDateTime" class="col-sm-2 control-label">Fecha/Hora Inicio</label>
                            <div class="col-sm-4">
                                <input id="startDateTime" kendo-date-time-picker k-ng-model="order.StartDateTime" />
                            </div>
                            <label for="year" class="col-sm-2 control-label">Tipo Vehículo</label>
                            <div class="col-sm-4">
                                <lt-ddl-tipo-coche lt-ng-model="order.VehicleType"
                                              lt-data-base="baseSelected"
                                              lt-data-distrito="distritoSelected" />
                            </div>

                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <label for="tipoCiclo" class="col-sm-2 control-label">Tipo de Ciclo Logistico</label>
                            <div class="col-sm-4">
                                <lt-ddl-tipo-ciclo-logistico lt-ng-model="order.LogisticsCycleType"
                                                             lt-dependent-on="distritoSelected" />
                            </div>
                            <label for="year" class="col-sm-2 control-label">Camión</label>
                            <div class="col-sm-4">
                                <lt-ddl-coche lt-ng-model="order.Vehicle"
                                              lt-depends-on="order.VehicleType"
                                              lt-data-base="baseSelected"
                                              lt-data-distrito="distritoSelected"
                                              lt-data-tipo-coche="order.VehicleType" />
                            </div>
                        </div>
                    </div>
                    <div class="row">

                        <div class="col-sm-12">
							<div kendo-grid="productosGrid" k-options="productosGridOptions" k-data-source="ds"></div>
                        </div>
                    </div>
                    <div class="row">

                        <div class="col-sm-12">
                            <div kendo-grid="cuadernasGrid" k-options="cuadernasGridOptions"></div>
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="cancel()">Cancelar</button>
                <a class="btn btn-primary" ng-disabled="disabledButton" ng-click="ok()" data-dismiss="modal">Programar</a>
            </div>
        </div>
    </div>

</div>
