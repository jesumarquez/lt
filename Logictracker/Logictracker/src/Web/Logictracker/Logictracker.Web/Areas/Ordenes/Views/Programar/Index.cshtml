@{
    ViewBag.Title = "Ordenes para Programar";
}

<script id="tPuntoEntrega" type="text/x-kendo-template">
    <div>
        <span>#= data.Codigo #</span>
        <br />
        <span style="font-size:xx-small;"> #= data.Descripcion #</span>
    </div>
</script>

<div ng-app="logictracker" class="container" ng-controller="OrdenesController">
    <div class="row nl-filterpanel">
        <div class="col-md-3">
            <div class="row">
                <div class="col-md-12">
                   @Html.ResourceLabel("Entities", "PARENTI01"):
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">                    
                    <lt-ddl-distrito lt-ng-model="distritoSelected" lt-default-value="UserData.DistritoSelected" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    @Html.ResourceLabel("Entities", "PARENTI02"):
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">                   
                    <lt-ddl-base lt-ng-model="baseSelected" lt-default-value="UserData.BaseSelected" lt-dependent-on="distritoSelected" />
                </div>
            </div>
        </div>       
        <div class="col-md-3">
            <div class="row">
                <div class="col-md-12">
                    @Html.ResourceLabel("Entities", "PARENTI07"):
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <lt-ms-transportista lt-ng-model="transportistaSelected"
                                         lt-data-distrito="distritoSelected"
                                         lt-depends-on-base="baseSelected" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <span class="InputGroup__label">@Html.ResourceLabel("Labels", "Entrega"):</span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <lt-ac-punto-entrega lt-ng-model="puntoEntregaSelected"
                                         lt-data-distrito="distritoSelected"
                                         lt-data-base="baseSelected"
                                         lt-template="tPuntoEntrega"
                                         lt-depends-on="baseSelected" />
                </div>

            </div>
        </div>        
        <div class="col-md-3">
            <div class="row">
                <div class="col-md-12">
                    @Html.ResourceLabel("Labels", "Desde"):
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <input class="form-control" kendo-date-picker k-ng-model="desde" />
                </div>
            </div>            
                <div class="row">
                    <div class="col-md-12">
                        @Html.ResourceLabel("Labels", "Hasta"):
                    </div>
                </div>
            <div class="row">
                <div class="col-md-12">
                    <input class="form-control" kendo-date-picker k-ng-model="hasta" />
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="row">
                <div class="col-md-12">
                    <button type="button" class="form-control" kendo-button style="margin-top: 1.5em;min-width: 10em" ng-click="onBuscar()">@Html.ResourceLabel("Labels", "Buscar")</button>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <button type="button" class="form-control" kendo-button style="margin-top: 1.5em; min-width: 10em" data-toggle="modal" data-target="#myModal">
                        @Html.ResourceLabel("Labels", "Asignar")
                    </button>
                </div>
            </div>
        </div>
    
    </div>
    <h1>@ViewBag.Title</h1>
    <div cass="row" style="margin-top: 1em;">
        <div class="col-md-12">
            
            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="myModalLabel">Enviar a Distribución</h4>
                        </div>
                        <div style="height: 200px" class="modal-body">
                            <form>
                                <div class="form-group">
                                    <label for="year" class="col-sm-4 control-label">Camión</label>
                                    <div class="col-sm-8">
                                        <lt-ddl-coche 
                                                lt-ng-model="order.Vehicle"
                                                lt-depends-on-base="baseSelected"
                                                lt-data-distrito="distritoSelected"/>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="startDateTime" class="col-sm-4 control-label">Fecha/Hora Inicio</label>
                                    <div class="col-sm-8">
                                        <input id="startDateTime" kendo-date-time-picker k-ng-model="order.StartDateTime" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="tipoCiclo" class="col-sm-4 control-label">Tipo de Ciclo Logistico</label>
                                    <div class="col-sm-8">
                                        <lt-ddl-tipo-ciclo-logistico 
                                                lt-ng-model="order.LogisticsCycleType" 
                                                lt-dependent-on="distritoSelected"  />
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                            <a class="btn btn-primary" ng-click="programOrders(order)" data-dismiss="modal">Programar</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div cass="row" style="margin-top: 1em;">
        <div class="col-md-12">
            <div kendo-grid="ordenesGrid" k-options="ordenesGridOptions" k-data-source="Orders"></div>
        </div>
    </div>

    <span kendo-notification="notify"></span>
</div>


