@using Logictracker.Web.App_Code
@{
    ViewBag.Title = "Index";
}

<div ng-app="logictracker" class="container" ng-controller="RechazoController">
    <div class="row nl-filterpanel">
        <div class="col-md-2">
            <div class="row">
                <div class="col-md-12">

                    @Html.ResourceLabel("Entities", "PARENTI01"):
                    <input kendo-drop-down-list="ddlDistrito"
                           k-data-source="distritoDS"
                           k-data-text-field="'Value'"
                           k-data-value-field="'Key'"
                           k-ng-model="distritoSelected"
                           />
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    @Html.ResourceLabel("Entities", "PARENTI02"):
                    <input kendo-drop-down-list="ddlBase"
                           k-data-source="baseDS"
                           k-data-text-field="'Value'"
                           k-data-value-field="'Key'"
                           k-ng-model="baseSelected"
                           k-on-data-bound="baseDefault(kendoEvent)" />
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="row">
                <div class="col-md-12">
                    @Html.ResourceLabel("Entities", "PARENTI04"):
                    <input kendo-multi-select
                           k-data-source="departamentoDS"
                           k-data-text-field="'Value'"
                           k-data-value-field="'Key'"
                           k-ng-model="departamentoSelected" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    @Html.ResourceLabel("Labels", "Estado"):
                    <input kendo-drop-down-list
                           k-data-source="estadoDS"
                           k-data-text-field="'Value'"
                           k-data-value-field="'Key'"
                           k-ng-model="estadoSelected" />
                </div>
            </div>
        </div>

        <div class="col-md-2">
            @Html.ResourceLabel("Entities", "PARENTI37"): <input kendo-multi-select
                                                                 k-data-source="centroDeCostosDS"
                                                                 k-data-text-field="'Value'"
                                                                 k-data-value-field="'Key'"
                                                                 k-ng-model="centroDeCostosSelected" />
        </div>

        <div class="col-md-2">
            @Html.ResourceLabel("Entities", "PARENTI07"): <input kendo-multi-select
                                                                 k-data-source="transportistaDS"
                                                                 k-data-text-field="'Value'"
                                                                 k-data-value-field="'Key'"
                                                                 k-ng-model="transportistaSelected" />
        </div>


        <div class="col-md-2">
            <div class="row">
                <div class="col-md-12">
                    @Html.ResourceLabel("Labels", "Desde"): <input kendo-date-picker
                                                                   k-ng-model="desde" />

                </div>
            </div>
            <div class="row">
                <div class="col-md-12">

                    @Html.ResourceLabel("Labels", "Hasta"): <input kendo-date-picker
                                                                   k-ng-model="hasta" />
                </div>
            </div>
        </div>


        <div class="col-md-2">
            <div class="row">
                <div class="col-md-12">
                    <button type="button" kendo-button style="margin-top: 1.5em;min-width: 10em" ng-click="onBuscar()">@Html.ResourceLabel("Labels", "Buscar")</button>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <button type="button" kendo-button style="margin-top: 1.5em; min-width: 10em" ng-click="onNuevo()">@Html.ResourceLabel("Labels", "Nuevo")</button>
                </div>
            </div>
        </div>
    </div>
  
    <div cass="row" style="margin-top: 1em;">
        <div class="col-md-12">
            <div kendo-grid k-options="gridOptions" k-data-source="rechazosDS"></div>
        </div>
    </div>
    <span kendo-notification="notify"></span>
    <div kendo-window="rechazoWin" k-min-width="600" k-min-height="200" k-visible="false" k-modal="true"></div>
</div>
