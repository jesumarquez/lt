@using Logictracker.Web.App_Code
@{
    ViewBag.Title = "Index";
}

<div ng-app="logictracker" class="container" ng-controller="RechazoController">
    <span kendo-notification="notify"></span>

    <div class="row ">
        <div class="col-md-2">
            <div class="row">
                <div class="col-md-12">

                    @Html.ResourceLabel("Entities", "PARENTI01"):<input kendo-drop-down-list="ddlDistrito"
                                                                        k-data-source="distritoDS"
                                                                        k-data-text-field="'Value'"
                                                                        k-data-value-field="'Key'"
                                                                        k-ng-model="distritoSelected" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    @Html.ResourceLabel("Entities", "PARENTI02"):<input kendo-drop-down-list="ddlBase"
                                                                        k-data-source="baseDS"
                                                                        k-data-text-field="'Value'"
                                                                        k-data-value-field="'Key'"
                                                                        k-ng-model="baseSelected"
                                                                        k-on-data-bound="baseDefault(kendoEvent)" />
                </div>
            </div>
        </div>
        <div class="col-md-2">
            @Html.ResourceLabel("Entities", "PARENTI04"): <input kendo-multi-select
                                                                 k-data-source="departamentoDS"
                                                                 k-data-text-field="'Value'"
                                                                 k-data-value-field="'Key'"
                                                                 k-ng-model="departamentoSelected" />
        </div>

        <div class="col-md-2">
            @Html.ResourceLabel("Entities", "PARENTI37"): <input kendo-multi-select
                                                                 k-data-source="centroDeCostosDS"
                                                                 k-data-text-field="'Value'"
                                                                 k-data-value-field="'Key'"
                                                                 k-ng-model="centroDeCostosSelected" />
        </div>

        <div class="col-md-2">
            @Html.ResourceLabel("Entities", "PARENTI07"): <input kendo-multi-select
                                                                 k-data-source="transportistaDS"
                                                                 k-data-text-field="'Value'"
                                                                 k-data-value-field="'Key'"
                                                                 k-ng-model="transportistaSelected" />
        </div>

        <div class="col-md-2">
            @Html.ResourceLabel("Entities", "PARENTI03"): <input kendo-multi-select />
        </div>

        <div class="col-md-2">
            <div class="row">
                @Html.ResourceLabel("Labels", "Desde"):  <input kendo-date-picker />
            </div>
            <div class="row">
                @Html.ResourceLabel("Labels", "Hasta"):  <input kendo-date-picker />
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-md-12" style="min-height: 1em"> </div>
    </div>
    <div cass="row">
        <div class="col-md-12">
            <div kendo-grid></div>
        </div>
    </div>
</div>
